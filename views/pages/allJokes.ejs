<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.forEach(joke => { %>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">
                                <%= joke.setup %>
                            </h2>
                        </div>
                        <div class="card-footer">
                            <p class="card-text">
                                <%= joke.punchline %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <nav class="nav justify-content-space-around justify-content-md-end">
            <a href="<%= `http://localhost:3001/jokes?page=${next}` %>">Next Page</a>
        </nav>
        <nav class="nav" id="nav">
            <a href="<%= `http://localhost:3001/jokes?page=${prev}` %>">Previous Page</a>
        </nav>
    </div>
</main>


<%- include('../partials/footer') %>